@page
@model Pizzaria.Pages.PizzaModel
@{
}

<div class="container text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our Great Selection Of Pizzas</h1>
        <h4 class="mainSubTitle">Choose one, or try our Pizza Builder! Then Order and Done!</h4>
        <h4 class="mainSubTitle">No need to give any of your details!</h4>
        <h4 class="mainSubTitle">We already know everything!</h4>
        <p class="smallText"><i>Only one per order.</i></p>

    </div>

    <div class="container">
        <div class="row m-1">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img class="img-pizza padding=2px" src="~/images/pizzas/Create.png"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left">Create your own Pizza!</h3>
                            <p style="text-align: left">Make your own pizza with our Pizza Maker!</p>
                            <a class="btn btn-primary" style="float: left" asp-area="" asp-page="/Forms/CustomPizza">Try Now!</a>
                        </div>
                        
                    </div>
                </div>
                
            </div>
            
            @foreach (var pizza in Model.fakePizzaDB)
            {
                var imagePath = "/images/pizzas/" + (pizza.ImageTitle + ".png");
                <div class="col-4 mb-5 mt-5">
                    <img class="w-100" src="@imagePath" asp-append-version ="true"/>
                    <a class="btn btn-primary mt-1" asp-area="" asp-page="/CheckOut/CheckOut" 
                    asp-route-ImageTitle="@pizza.ImageTitle" 
                    asp-route-PizzaName="@pizza.PizzaName"
                    asp-route-PizzaPrice="@pizza.FinalPrice">Get this Pizza!</a>
                    <br/>  
                </div>
            }
                               
                  
            
         
        </div>

    </div>
    

</div>

<a class="nav-link text-dark" asp-area="" asp-page="/Forms/CustomPizza">CustomPizzas</a>
<a class="nav-link text-dark" asp-area="" asp-page="/CheckOut/CheckOut">Check Out</a>
